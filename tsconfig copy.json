{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types/override.d.ts"],
    "target": "es2018",
    "module": "CommonJS",
    "lib": ["dom", "es6", "es2017", "es2018", "esnext.asynciterable"],
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "./build",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": { "~/*": ["./src/*"] }
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src/**/*.ts"]
}
